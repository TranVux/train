{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@components": ["components"],
      "@screens": ["screens"],
      "@theme": ["theme"],
      "@configs": ["configs"],
      "@assets": ["assets"],
      "@utils": ["utils"],
      
      "@components/*": ["components/*"],
      "@screens/*": ["screens/*"],
      "@theme/*": ["theme/*"],
      "@configs/*": ["configs/*"],
      "@assets/*": ["assets/*"],
      "@utils/*": ["utils/*"],
    }, 
  },
}
